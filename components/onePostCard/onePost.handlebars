<div id="card" class="card">
    <div class="card-title">
        <a class="card-title__content">
            {{title}}
        </a>
    </div>
    <div class="card-published">
        <div class="card-published__content">
            {{published}}
        </div>
    </div>
    <div class="card-picture">
        <img src={{imgUrl}} class="card-picture__content">
    </div>
    <div class="card-text">
        <a href={{postUrl}} class="card-text__content">
            {{contentData}}
        </a>
    </div>
    <div class="card-info">
        <div class="card-info__author">
            {{author}}
        </div>
    </div>
</div>
